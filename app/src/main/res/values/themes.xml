<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_40</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_bold</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="loginButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">@string/login_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="filledBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="filledWhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="profileNameTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black_40</item>
    </style>

    <style name="rightCustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="leftCustomButtonIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:elevation">100dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="leftCustomButtonGray" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gray_187</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="rightCustomButtonIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:elevation">100dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="newPostEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:hint">@string/new_post_et_hint</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/gray_170</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="postLocationTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="postDateTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="postProfileNameTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black_40</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profileImageView">
        <item name="android:layout_width">132dp</item>
        <item name="android:layout_height">132dp</item>
        <item name="android:layout_marginTop">48dp</item>
    </style>

    <style name="postProfileImageView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    
    <style name="newPostCloseIcon">
        <item name="android:src">@drawable/ic_baseline_close_24</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="newPostAddImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="postImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="postTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/black_54</item>
    </style>
    
    <style name="forgotPasswordTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">@string/login_forgot_password</item>
        <item name="android:textColor">@color/blue_bold</item>
    </style>

    <style name="loginAppIcon">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:src">@drawable/ic_mainicon_outline_white</item>
    </style>

    <style name="loginAppIconTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="userBottomNavigationBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="layoutStyle">
        <item name="android:background">@color/white</item>
    </style>
</resources>