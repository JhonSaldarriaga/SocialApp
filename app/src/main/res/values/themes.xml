<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="loginButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">@string/login_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="filledBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="filledWhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="profileNameText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black_40</item>
    </style>
    
</resources>